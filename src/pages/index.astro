---
import Layout from '../layouts/Layout.astro';
import { getImage } from 'astro:assets';
import backgroundImg from '../assets/deer.png';

const optimizedBackground = await getImage({
    src: backgroundImg,
    format: 'webp'
})
---

<Layout title="Home">
    <section class="relative mt-4 flex flex-col items-center justify-center p-10 w-full sm:w-auto h-full">
        <div class={`absolute z-0 mx-2 inset-0 bg-cover bg-center sm:bg-bottom-left opacity-90 rounded sm:rounded-2xl`} style={`background-image: url('${optimizedBackground.src}')`}/>
        <div class="relative z-10 sm:px-20 h-auto overflow">
            <h1 class="font-poppins text-5xl bg-linear-to-r from-forest-100 to-white inline-block bg-clip-text text-transparent sm:text-7xl sm:w-2/3 font-semibold sm:font-bold">Let's build a website your customers will love.</h1>
        </div>
    </section>
</Layout>
